@model LabFive.Models.Category;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/System/Views/Layout/Backend.cshtml";
}

<div class="container">
    <div class="page-title">
        <h3>Add category</h3>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">

                <div class="card-header">
                    <a asp-action="add" class="btn btn-success">Edit category</a>
                </div>
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <form class="" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id"/>

                        <div class="mb-3 row">
                            <label class="col-sm-2">Name</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Name" class="form-control" />
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <div class="line"></div>
                        <br />
                        <div class="mb-3 row">
                            <label class="col-sm-2">Slug</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Slug" class="form-control" />
                                <span class="text-danger" asp-validation-for="Slug"></span>
                            </div>
                        </div>
                        <div class="line"></div>
                        <br />
                        <div class="mb-3 row">
                            <label class="col-sm-2">Description</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Des" class="form-control" />
                                <span class="text-danger" asp-validation-for="Des"></span>
                            </div>
                        </div>
                        <div class="line"></div>
                        <br />
                        <div class="mb-3 row">
                            <label class="col-sm-2">Status</label>
                            <div class="col-sm-10">
                                <input type="radio" asp-for="Status" value="1" checked /> Active
                                <input type="radio" asp-for="Status" value="0" /> Hide
                            </div>
                        </div>
                        <div class="line"></div>
                        <br />
                        <div class="mb-3 row">
                            <div class="col-sm-4 offset-sm-2">
                                <button type="submit" class="btn btn-primary mb-2">
                                    <i class="fas fa-save"></i> Save
                                </button>
                                <a asp-action="Index" class="btn btn-secondary mb-2">
                                    <i class="fas fa-times"></i>Cancel
                                </a>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>